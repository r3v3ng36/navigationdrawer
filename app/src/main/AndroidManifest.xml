    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@drawable/logo_final"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_final"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup,label">
        <activity android:name=".OnlineSession"></activity>
        <activity android:name=".QueryFormActivity" />
        <activity android:name=".MeetingsList" />
        <activity android:name=".ZoomMainActivity" />
        <activity android:name=".pdfview" />
        <activity android:name=".recording_task" />
