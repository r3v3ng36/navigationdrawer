        <activity
            android:name=".all_notifcations"
            android:label="View All Notices" />
        <activity
            android:name=".task_management"
            android:label="Task Management" />
        <activity
            android:name=".Support"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".RegisterInvoice"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".queryform" />
        <activity
            android:name=".magazines"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".UpComingCoursesPopup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NavigationDrawer"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".coursedetail"
            android:label="Course Details"
            android:theme="@style/AppTheme" />
